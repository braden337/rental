<h1><%= @rental.address %>, <%= @rental.tenant %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th class="text-right">Amount</th>
    </tr>
  </thead>
  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.paid_at.strftime('%b %d, %Y') %></td>
        <td class="text-right"><%= money(payment.amount) %></td>
      </tr>
    <% end %>
  </tbody>

</table>

<div class="text-right">
  <h2 style="font-family: monospace;"><%= money(@sum) %></h2>
</div>
